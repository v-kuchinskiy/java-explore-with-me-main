{
  "info": {
    "name": "Feature - Comments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseurl",
      "value": "http://localhost:8080"
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "categoryId",
      "value": ""
    },
    {
      "key": "eventId",
      "value": ""
    },
    {
      "key": "commentId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Setup - Create user",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/admin/users",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "admin",
            "users"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Comment User\",\n  \"email\": \"comment.user.{{$timestamp}}@example.com\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.collectionVariables.set('userId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Setup - Create category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/admin/categories",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "admin",
            "categories"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Комментарии {{$timestamp}}\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.collectionVariables.set('categoryId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Setup - Create event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/users/{{userId}}/events",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "events"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"annotation\": \"Комментарий к событию для проверки работы API.\",\n  \"category\": {{categoryId}},\n  \"description\": \"Описание тестового события, созданного для комментариев в коллекции.\",\n  \"eventDate\": \"2099-01-01 10:00:00\",\n  \"location\": {\n    \"lat\": 55.75,\n    \"lon\": 37.61\n  },\n  \"paid\": false,\n  \"participantLimit\": 0,\n  \"requestModeration\": false,\n  \"title\": \"Тестовое событие\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.collectionVariables.set('eventId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Setup - Publish event",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/admin/events/{{eventId}}",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "admin",
            "events",
            "{{eventId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"stateAction\": \"PUBLISH_EVENT\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Add comment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/users/{{userId}}/comments?eventId={{eventId}}",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "comments"
          ],
          "query": [
            {
              "key": "eventId",
              "value": "{{eventId}}"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Cобытие!\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.collectionVariables.set('commentId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Update comment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/users/{{userId}}/comments/{{commentId}}",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "comments",
            "{{commentId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Обновленный комментарий\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Moderate comment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseurl}}/admin/comments/{{commentId}}",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "admin",
            "comments",
            "{{commentId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PUBLISHED\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get event comments",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseurl}}/events/{{eventId}}/comments",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "events",
            "{{eventId}}",
            "comments"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete comment",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseurl}}/users/{{userId}}/comments/{{commentId}}",
          "host": [
            "{{baseurl}}"
          ],
          "path": [
            "users",
            "{{userId}}",
            "comments",
            "{{commentId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 204', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}